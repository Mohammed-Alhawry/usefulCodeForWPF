<UserControl x:Class="ExperimentalThingsUsingWPF.Views.MaterialsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ExperimentalThingsUsingWPF.Views"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800" Loaded="MaterialsView_Loaded">
    <Grid Margin="10">
        <Grid.Resources>
            <Style TargetType="DataGridColumnHeader"
                   x:Key="ColumnHeaderStyle">
                <Setter Property="Background"
                        Value="Transparent" />
                <Setter Property="Foreground"
                        Value="{StaticResource slate300Color}" />
                <Setter Property="FontSize"
                        Value="15" />
                <Setter Property="Padding"
                        Value="10 0 0 10" />
            </Style>
            <Style TargetType="Button"
                   x:Key="SearchButtonStyle">
                <Setter Property="Background"
                        Value="{StaticResource blue800Color}" />
                <Setter Property="Foreground"
                        Value="{StaticResource blue100Color}" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="7"
                                    Width="40"
                                    Height="30"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>

                <Style.Triggers>
                    <Trigger Property="IsMouseOver"
                             Value="True">
                        <Setter Property="Background"
                                Value="{StaticResource blue900Color}" />
                        <Setter Property="Foreground"
                                Value="{StaticResource slate300Color}" />
                    </Trigger>

                    <Trigger Property="IsFocused"
                             Value="True">
                        <Setter Property="Background"
                                Value="{StaticResource blue900Color}" />
                        <Setter Property="Foreground"
                                Value="{StaticResource slate300Color}" />
                    </Trigger>
                </Style.Triggers>

            </Style>
        </Grid.Resources>
        <StackPanel>

            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Top">
                <fa:IconImage Icon="Search"
                              Height="20"
                              Width="20"
                              Foreground="{StaticResource blue700Color}" />
                <TextBox 
                         Width="300"
                         Foreground="{StaticResource slate500Color}"
                         Style="{StaticResource TextBoxStyle}"
                         BorderBrush="{StaticResource blue700Color}"
                         CaretBrush="{StaticResource blue700Color}"
                         VerticalContentAlignment="Center"
                         Margin="5"
                         Height="24"
                         VerticalAlignment="Center"
                         Background="Transparent"
                         BorderThickness="0 0 0 1"
                         Text="Search..."
                         GotFocus="SearchTextBox_GotFocus"
                         LostFocus="SearchTextBox_LostFocus"
                         FontFamily="Montserrat"
                         FontWeight="Medium"
                         FontSize="13">

                </TextBox>

                <Button Content="Search"
                        Cursor="Hand"
                        Style="{StaticResource SearchButtonStyle}"
                        FontSize="12"
                        FontFamily="Montserrat"
                        BorderThickness="0"
                        Foreground="White" />
            </StackPanel>

            <Border CornerRadius="10"
                    Background="{StaticResource blue900Color}"
                    Height="580"
                    Margin="5"
                    Padding="10">
                <DataGrid x:Name="materialsGrid"
                          
                          Background="{StaticResource blue900Color}"
                          ColumnWidth="*"
                          BorderThickness="0"
                          ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}">
                    <DataGrid.Style>
                        <Style BasedOn="{StaticResource {x:Type DataGrid}}"
                               TargetType="DataGrid">

                            <Setter Property="CanUserAddRows"
                                    Value="False" />
                            <Setter Property="AutoGenerateColumns"
                                    Value="False" />
                            <Setter Property="CanUserReorderColumns"
                                    Value="False" />
                            <Setter Property="CanUserSortColumns"
                                    Value="False" />

                            <Setter Property="SelectionMode"
                                    Value="Single" />
                        </Style>
                    </DataGrid.Style>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background"
                                    Value="Transparent" />
                            <Setter Property="Foreground"
                                    Value="{StaticResource slate300Color}" />
                            
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Id}"
                                            ClipboardContentBinding="{x:Null}"
                                            Header="Id" />
                        <DataGridTextColumn Binding="{Binding ShortName}"
                                            ClipboardContentBinding="{x:Null}"
                                            Header="Short Name" />
                        <DataGridTextColumn Binding="{Binding FullName}"
                                            ClipboardContentBinding="{x:Null}"
                                            Header="Full Name" />
                        <DataGridTextColumn Binding="{Binding Price}"
                                            ClipboardContentBinding="{x:Null}"
                                            Header="Price" />
                    </DataGrid.Columns>

                </DataGrid>
            </Border>

        </StackPanel>

    </Grid>
</UserControl>
