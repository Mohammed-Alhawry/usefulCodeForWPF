<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    
    <!--primary -->
    <SolidColorBrush Color="{Binding  Source={StaticResource blue950Color}, Path=Color}" x:Key="MainColor"/>

    <!--color for when the controle is under hover or ischecked-->
    <SolidColorBrush Color="{Binding Source={StaticResource blue900Color}, Path=Color}" x:Key="SecondaryColor"/>
    
    <!--color for when controls are not under hover or ischecked-->
    <SolidColorBrush Color="{Binding Source={StaticResource slate400Color}, Path=Color}" x:Key="ThirdColor"/>
</ResourceDictionary>